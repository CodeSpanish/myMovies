{% extends '::base.html.twig' %}

{% block body -%}
    <h1>MoviesList list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Amazonid</th>
                <th>Imdbid</th>
                <th>Wikipediaid</th>
                <th>Rottentomatoesid</th>
                <th>Mymoviesid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('movieslist_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.amazonId }}</td>
                <td>{{ entity.imdbId }}</td>
                <td>{{ entity.wikipediaId }}</td>
                <td>{{ entity.rottentomatoesId }}</td>
                <td>{{ entity.mymoviesId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('movieslist_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('movieslist_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('movieslist_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
